<% form_for(@feedback) do |f| %>
	<%= f.label :from, 'Имя' %><br>
	<%= f.text_field :from %>
	
	<%= f.label :email, :class => (:hidden if signed_in?) %><br>
	<%= f.text_field :email, :class => (:hidden if signed_in?) %>
	
	<%= f.label :text, 'Вопрос' %><br>
	<%= f.text_area :text %><br>
	
	<%= f.submit 'отправить' %>
<% end %>