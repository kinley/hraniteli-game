<h1 style="border-bottom:1px solid black">Новости</h1>
<table  class="admin_pages" cellpadding="0" cellspacing="0" border="0">
	<% @posts.each do |item| %>
	<tr>
		<td>
			<%= item.title %> 
		</td>
		<td>
			<%= link_to 'Show', item %>
		</td>
		<td>
			<%= link_to 'Edit', edit_post_path(item) %>
		</td>
		<td>
			<%= link_to 'Destroy', item, :method => :delete, :confirm => "Уверены?", :title => "Удаление новости" %>
		</td>
	</tr>
	<% end %>
	<tr><td><%= link_to "Добавить новость", new_post_path %></td></tr>
</table>