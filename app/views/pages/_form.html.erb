<% form_for(@page) do |f| %>
<table  class="admin_pages" cellpadding="0" cellspacing="0" border="0">
	<tr>
		<td>
			<%= f.label 'Заголовок' %>
		</td>
		<td>
			<%= f.text_field :title %>
		</td>
	</tr>
	<tr>
		<td>	
			<%= f.label 'Ссылка' %>
		</td>
		<td>
			<%= f.text_field :href %>
		</td>
	</tr>
	<tr>
		<td>	
			<%= f.label 'Текст' %>
		</td>
		<td>
			<%= f.text_area :text, :class => "mceEditor" %>
		</td>
	</tr>
	<tr>
		<td></td>
		<td style="text-align:right">
			<%= f.submit 'Опубликовать' %>
		</td>
	</tr>
</table>
<% end %>